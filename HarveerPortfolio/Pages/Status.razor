@page "/status"

<div class="main-content">
    <h1 class="text-4xl font-extrabold text-[#0078d7] mb-6 border-b-2 pb-3 border-gray-300">
        Application Status 📶
    </h1>

    <p class="text-lg text-gray-700 mb-8">
        This app is built using <span class="font-semibold">Blazor WebAssembly</span> and styled with <span class="font-semibold">Tailwind CSS</span>.
        The deployment is automated via <span class="font-semibold">GitHub Actions</span> CI/CD pipelines.
    </p>

    <div class="space-y-6">
        <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-1">Framework Version</h2>
            <span class="inline-block px-3 py-1 rounded-full bg-blue-600 text-white font-medium">@runtimeInfo</span>
        </div>

        <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-1">Hosting Status</h2>
            <span class="inline-block px-3 py-1 rounded-full bg-green-600 text-white font-medium">Online</span>
        </div>

        <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-1">CI/CD Pipeline</h2>
            <span class="inline-block px-3 py-1 rounded-full bg-green-600 text-white font-medium">Passing</span>
        </div>

        <div>
            <h2 class="text-xl font-semibold text-gray-800 mb-1">Last Updated</h2>
            <span class="text-gray-700 font-medium">@currentDateTime</span>
        </div>
    </div>
</div>

@code {
    private string currentDateTime = DateTime.Now.ToString("dddd, MMMM d, yyyy h:mm tt");
    private string runtimeInfo = System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription;
}